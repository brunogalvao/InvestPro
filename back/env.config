# ========================================
# 🌍 INVESTPRO BACKEND - VARIÁVEIS DE AMBIENTE
# ========================================

# 🚀 AMBIENTE
NODE_ENV=development
LOG_LEVEL=info
REQUEST_TIMEOUT=30000

# 🔐 JWT & SEGURANÇA
JWT_SECRET=jwt_secret_1703271600_dev_secret_key_change_in_production
BCRYPT_SALT_ROUNDS=10
JWT_EXPIRES_IN=24h

# 🌐 CORS
CORS_ORIGIN=http://localhost:5173,http://localhost:3000

# 🗄️ DATABASE (Configure com suas credenciais)
# Para desenvolvimento local, você pode usar:
# - Neon PostgreSQL (gratuito): https://neon.tech
# - Vercel Postgres (gratuito): https://vercel.com/docs/storage/vercel-postgres
DATABASE_URL=postgres://user:password@host:port/database?sslmode=require

# 🔴 REDIS (Configure com suas credenciais)
# Para desenvolvimento local, você pode usar:
# - Upstash Redis (gratuito): https://upstash.com
# - Vercel KV (gratuito): https://vercel.com/docs/storage/vercel-kv
KV_URL=rediss://default:token@host:port
REDIS_URL=rediss://default:token@host:port
REDIS_TLS=true

# 📊 UPSTASH REST API (opcional)
KV_REST_API_URL=https://seu-projeto.upstash.io
KV_REST_API_TOKEN=seu_token_aqui

