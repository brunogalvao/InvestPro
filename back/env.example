# 🗄️ DATABASE (Neon PostgreSQL / Vercel Postgres)
DATABASE_URL=postgres://user:password@host:port/database?sslmode=require

# 🔴 REDIS (Upstash / Vercel KV)
KV_URL=rediss://default:token@host:port
REDIS_URL=rediss://default:token@host:port
REDIS_TLS=true

# 🔐 JWT & SEGURANÇA
BCRYPT_SALT_ROUNDS=10
JWT_SECRET=sua_chave_secreta_super_segura_aqui_use_uma_chave_longa_e_complexa
JWT_EXPIRES_IN=24h

# 🌐 CORS
CORS_ORIGIN=http://localhost:5173,https://seu-dominio.vercel.app

# 📊 UPSTASH REST API (opcional)
KV_REST_API_URL=https://seu-projeto.upstash.io
KV_REST_API_TOKEN=seu_token_aqui

# 🚀 AMBIENTE
NODE_ENV=development
PORT=4000

# 🔧 CONFIGURAÇÕES ADICIONAIS
LOG_LEVEL=info
REQUEST_TIMEOUT=30000
