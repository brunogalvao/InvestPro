{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    },
    {
      "src": "i18n-api/server.js",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["i18n-api/**"]
      }
    },
    {
      "src": "account-api/server.js",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["account-api/**"]
      }
    }
  ],
  "routes": [
    {
      "src": "/api/i18n/(.*)",
      "dest": "/i18n-api/server.js"
    },
    {
      "src": "/api/accounts/(.*)",
      "dest": "/account-api/server.js"
    },
    {
      "src": "/i18n/(.*)",
      "dest": "/i18n-api/server.js"
    },
    {
      "src": "/accounts/(.*)",
      "dest": "/account-api/server.js"
    },
    {
      "src": "/health",
      "dest": "/i18n-api/server.js"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "functions": {
    "i18n-api/server.js": {
      "maxDuration": 30
    },
    "account-api/server.js": {
      "maxDuration": 30
    }
  },
  "buildCommand": "npm run build",
  "outputDirectory": "dist"
}
