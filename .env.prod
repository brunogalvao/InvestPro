# üê≥ Vari√°veis de Ambiente - InvestPro
# Copie este arquivo para .env e configure os valores

# ===== CONFIGURA√á√ïES GERAIS =====
NODE_ENV=production
COMPOSE_PROJECT_NAME=investpro-prod

# ===== FRONTEND =====
VITE_I18N_API_URL=http://localhost:3000
VITE_ACCOUNT_API_URL=http://localhost:4000

# ===== API DE CONTAS =====
ACCOUNT_API_PORT=4000
ACCOUNT_API_HOST=0.0.0.0
BCRYPT_SALT_ROUNDS=12
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=24h

# ===== API DE TRADU√á√ïES =====
I18N_API_PORT=3000
I18N_API_HOST=0.0.0.0

# ===== BANCO DE DADOS =====
POSTGRES_USER=investpro
POSTGRES_PASSWORD=investpro
POSTGRES_DB=investpro
POSTGRES_PORT=5432
POSTGRES_HOST=postgres
DATABASE_URL=postgres://investpro:investpro@postgres:5432/investpro

# ===== REDIS =====
REDIS_PORT=6379
REDIS_HOST=redis
REDIS_URL=redis://redis:6379

# ===== VOLUMES =====
POSTGRES_DATA_PATH=./docker/volumes/postgres
REDIS_DATA_PATH=./docker/volumes/redis

# ===== LOGS =====
LOG_LEVEL=info
LOG_FORMAT=json

# ===== CORS =====
CORS_ORIGIN=http://localhost:5173
CORS_CREDENTIALS=true

# ===== RATE LIMITING =====
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ===== HEALTH CHECKS =====
HEALTH_CHECK_INTERVAL=30s
HEALTH_CHECK_TIMEOUT=5s
HEALTH_CHECK_RETRIES=3
